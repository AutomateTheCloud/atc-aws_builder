##-------------------------------------------------------------------------------------------------
# object:  CodeDeploy/DeploymentGroup/Target8LB_NLB
# class:   resource
##-------------------------------------------------------------------------------------------------
DeploymentGroupTarget8LB:
  Condition: "EnabledCodeDeployTarget8LB"
  Type: "AWS::CodeDeploy::DeploymentGroup"
  Properties:
    ApplicationName: !Ref "CodeDeployApplicationApp"
    DeploymentGroupName: !Join [ "-", [ !Select [1, !Split ["|", !Ref "CodeDeployApplication"]], !Ref "DeploymentGroupAppendTarget8" ] ]
    AutoRollbackConfiguration:
      Enabled: "true"
      Events:
        - DEPLOYMENT_FAILURE
        - DEPLOYMENT_STOP_ON_ALARM
        - DEPLOYMENT_STOP_ON_REQUEST
    AutoScalingGroups:
      - !GetAtt "StackReferenceResultsTarget8.AutoScalingGroupInstanceId"
    LoadBalancerInfo:
      TargetGroupInfoList:
        - Name: !GetAtt "StackReferenceResultsTarget8.TargetGroupInstanceNLBName"
    DeploymentStyle:
      DeploymentOption: WITH_TRAFFIC_CONTROL
    DeploymentConfigName: "CodeDeployDefault.AllAtOnce"
    ServiceRoleArn: !GetAtt "RoleCodeDeploy.Arn"
  DependsOn:
    - "RoleCodeDeploy"
    - "StackReferenceResultsTarget8"

